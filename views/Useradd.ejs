<h3>Ajouter un nouveau Utilisateur</h3>
<div class="col-12 row justify-content-center">
  <form class="col-8 card box mt-4 " method="POST" action="/Users/add">
    <div class="row mt-4 justify-content-center">
      <div class="col-4">
        <input name="email" type="email" class="form-control text-center" placeholder="email" required>
      </div>
      <div class="col-4">
        <input name="pwd" type="password" class="form-control text-center" placeholder="password" required >
      </div>
     
        <select class="form-controle col-4 text-center" name="depart" aria-label="Default select example">
            <% Departement.forEach(function(dept){ %>
            <option value=" <%= dept.id %>"><%= dept.dept_name %></option>
            <% }); %>
          </select>
        </div>
    
    
  
    <div class="row mt-2 mb-4 justify-content-center">
      <button type="submit" class="btn btn-primary col-4">Ajouter</button>
    </div>
  </form>
</div>